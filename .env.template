# Environment Configuration for Expat Legal Advisory Agent
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (already in .gitignore)

# ========================================
# REQUIRED
# ========================================

# Google API Key (required for Gemini LLM and Google Translate)
# Get it from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ========================================
# OPTIONAL
# ========================================

# Flask API Key (for REST API mode)
# Generate random: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_API_KEY=your_flask_api_key_here

# Session Encryption Key (for encrypted session storage)
# Auto-generated if not provided, but won't persist across restarts
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_SECRET=your_session_encryption_key_here

# ========================================
# DEVELOPMENT
# ========================================

# Flask debug mode (never use True in production)
FLASK_DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
